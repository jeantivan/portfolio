---
interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, ...rest } = Astro.props;

const pathname = Astro.url.pathname.endsWith("/")
  ? Astro.url.pathname.slice(0, -1)
  : Astro.url.pathname;
const isActive = href === pathname;
---

<a
  {...rest}
  class:list={[
    "mobile-nav-link",
    "w-full inline-flex justify-center py-4",
    "text-4xl font-display text-background-11",
    "border-b border-primary-8",
    isActive && "border-primary-9 text-background-12",
  ]}
  href={href}
>
  <slot />
</a>
